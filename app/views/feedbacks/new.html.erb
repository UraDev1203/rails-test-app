<h2>Leave Feedback for <%= @product.name %></h2>

<%= form_with model: @feedback, url: feedbacks_path do |f| %>
    <%= f.hidden_field :product_id, value: @product.id %>
    <%= f.text_field :rating, placeholder: "Select Rating", class:"inline-block w-96 px-3 py-2 mt-2 shadow rounded-md border border-gray-200 outline-none" %>
    <%= f.submit "Submit Feedback" , class: "btn py-2 ml-2 bg-blue-600 text-white"%>
<% end %>